<svg width="320" height="{{height}}" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-labelledby="cardTitle" role="img">
  <title id="cardTitle">Now playing on Spotify</title>
  <foreignObject width="320" height="{{height}}">
    <style>
      div {
        font-family: -apple-system, BlinkMacSystemFont, Segoe UI, Helvetica, Arial, sans-serif, Apple Color Emoji, Segoe UI Emoji;
      }

      .container {
        background-color: #{{background_color}};

        padding: 10px 10px
      }

      .not-play {
        color: #ff1616;
        text-align: center;
      }

      .text-container {
        margin: 5px 0 15px;
      }

      .artist {
        -webkit-text-stroke: 0.8px #efefef;
        text-shadow: 0px 2px #000;        
        color: #ff3333;
        font-weight: bolder;
        font-size: 24px;
        text-align: center;
      }

      .song {
        -webkit-text-stroke: 0.8px #f7f7f7;
        text-shadow: 0px 2px #000;
        font-weight: bolder;
        color: #0000de;
        font-weight: bolder;
        font-size: 24px;
        text-align: center;
      }

      .logo {
        margin-left: 5px;
      }

      .cover {
        
      }

      @keyframes sound {
        0% {
          opacity: .35;
          height: 3px;
        }

        100% {
          opacity: 1;
          height: 28px;
        }
      }

      {{css_bar|safe}}
    </style>
    <div xmlns="http://www.w3.org/1999/xhtml" class="container">
      {% if song_name %}
        <div class="text-container">
          <div class="song">{{song_name}}</div>
          <div class="artist">{{artist_name}}</div>
        </div>

        {% if cover_image %}
          <a href="{}" target="_BLANK">
            <center>
              <img src="data:image/png;base64, {{img}}" width="300" height="300" class="cover" />
            </center>
          </a>
        {% endif %}

      {% else %}
        <div class="playing not-play">Nothing playing on Spotify</div>
      {% endif %}

    </div>
  </foreignObject>
</svg>
